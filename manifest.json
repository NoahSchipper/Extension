{
    "name": "Schipper Translate",
    "description": "An extension to translate text from one language to another.",
    "version": "0.1",
    "manifest_version" : 3,

    "icons": {
        "128": "images/TranslateLogo.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/TranslateLogo.png",
            "32": "images/TranslateLogo2.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}